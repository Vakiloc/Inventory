{
  "name": "inventory-app",
  "private": true,
  "workspaces": [
    "server",
    "desktop",
    "mobile"
  ],
  "dependencies": {
    "7zip-bin": "5.2.0"
  },
  "overrides": {
    "tar": "^7.5.7",
    "qs": "^6.14.2"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  },
  "scripts": {
    "dev": "npm run dev -w server",
    "dev:desktop": "npm run dev -w desktop",
    "dev:all": "concurrently --kill-others --success first -n server,desktop \"npm run dev -w server\" \"npm run dev -w desktop\"",
    "dev:all:clean": "node scripts/kill-ports.mjs && npm run dev:all",
    "build": "npm run build -w server && npm run build -w desktop",
    "clean": "node scripts/clean.mjs",
    "lint:i18n": "node scripts/check-i18n-keys.mjs",
    "test": "npm run lint:i18n && npm test -w server && npm test -w desktop",
    "release": "node scripts/release.mjs",
    "setup:certs": "node scripts/setup-certbot-duckdns-split.mjs"
  }
}
